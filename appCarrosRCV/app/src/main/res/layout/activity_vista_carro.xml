<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:foregroundTint="#101010"
    android:orientation="vertical"
    tools:context=".VistaCarro">

    <Button
        android:id="@+id/btn_back"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:textSize="20sp"
        android:textColor="#A50000"
        android:backgroundTint="#212121" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_nombre_carro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="holiwi"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/img_carro"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/txt_precio"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="15sp"
            android:gravity="center_vertical"
            android:text="holiwi"
            android:textColor="#A50000"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehículo en perfecto estado, Cuenta con Varios extras, alrededor de $30.000.000, todo de excelentes marcas y de calidad, muy pocos con este color y Xdrive, ya no viene en este color nuevos tracción trasera, peritaje hecho hace 1 mes."
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"/>


    </LinearLayout>


</LinearLayout>